/* pages/me/book/book.wxss */

.item {
  background-color: #fff;
  padding-left: 52rpx;
}

.item view {
  color: #333;
  line-height: 32rpx;
  padding: 31rpx 0;
}

.item image {
  width: 32rpx;
  height: 32rpx;
  padding: 31rpx 60rpx;
}

.btn-view {
  margin: 32rpx;
}

button {
  color: #fff;
  background-color: #f60;
}

.modal {
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
}

.inp-view {
  width: 675rpx;
  color: #333;
  line-height: 52rpx;
  padding-top: 64rpx;
  background: #fff;
  border-radius: 8rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

input {
  width: 396rpx;
  height: 52rpx;
  margin-left: 86rpx;
  padding-left: 30rpx;
  border: 1rpx solid #dedede;
}

.inp-view > view:nth-child(1) {
  padding-left: 96rpx;
}

.inp-view > view:nth-child(2) {
  padding-top: 34rpx;
  padding-left: 96rpx;
}

.btns {
  width: 572rpx;
  padding: 40rpx 50rpx;
}

.btns button {
  display: inline-block;
  font-size: 26rpx;
  line-height: 26rpx;
  padding: 12rpx 108rpx;
}

.btns button:first-child {
  color: #6c3;
  background: #fff;
  border: 1rpx solid #6c3;
  margin-right: 26rpx;
}

.btns button:last-child {
  border: 1rpx solid #f60;
}
