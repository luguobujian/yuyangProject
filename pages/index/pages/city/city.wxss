/* pages/index/pages/city/city.wxss */

/*城市列表*/

.city_list {
  position: relative;
}

/*城市选择头部*/

.list_tit {
  display: block;
  line-height: 40px;
  height: 40px;
  padding-left: 15px;
  font-size: 16ppx;
  background: #eee;
  color: #03a9f4;
}

.list_con {
  height: 40px;
  /*border-top: 1px #f5f5f5 solid ;*/
  line-height: 40px;
  font-size: 16px;
  padding-left: 15px;
}

.list_con::before {
  content: " ";
  height: 1px;
  border-top: 1px #f5f5f5 solid;
  position: absolute;
  width: 100%;
}

.list_con::before:nth-child(1) {
  border: none;
}

.list_con:active {
  background-color: #f5f5f5;
}

.item-box > view {
}

/*城市选择 右边*/

.scroll_list {
  background: rgba(0, 0, 0, 0);
  position: fixed;
  height: calc(100% - 100px);
  width: 25px;
  top: 50px;
  right: 10px;
}

.scroll_list_chi {
  /*border: 1px blue solid;*/
  color: #03a9f4;
  text-align: center;
  font-size: 10px;
}

/*显示框*/

.showwords {
  width: 80px;
  height: 80px;
  color: #03a9f4;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 10%;
  line-height: 80px;
  text-align: center;
  font-size: 10vw;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 999;
}
